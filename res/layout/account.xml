<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2DCC70"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/Individual"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Individual_Sign_Up" />

        <RadioButton
            android:id="@+id/Company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Company_Sign_up" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGender"
        android:background="@drawable/edited_account_border"
        android:prompt="@string/spinner_prompt" />

    <ScrollView
        android:id="@+id/ScrlIndv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/icons"
        android:layout_below="@+id/spinner1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Fname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="FIRST NAME" />

            <EditText
                android:id="@+id/Lname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="LAST NAME" />

            <EditText
                android:id="@+id/Pcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="POST CODE" />

            <EditText
                android:id="@+id/Dob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="DOB" />

            <EditText
                android:id="@+id/Pmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="PERSONAL EMAIL" />

            <EditText
                android:id="@+id/Wmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="WORK EMAIL" />

            <EditText
                android:id="@+id/Psw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="PASSWORD"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnNextIndv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Next" />
        </LinearLayout>
    </ScrollView>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScrlIndv"
        android:background="@drawable/edited_account_border"
        android:prompt="@string/company_prompt" />

    <ScrollView
        android:id="@+id/ScrlCmp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/icons"
        android:layout_below="@+id/spinner2" >

        <LinearLayout
            android:id="@+id/LinearCmp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Cname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="NAME OF COMPANY" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="STREET ADDRESS" />

            <EditText
                android:id="@+id/PObox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="P O BOX" />

            <EditText
                android:id="@+id/TlPne"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="TELEPHONE" />

            <EditText
                android:id="@+id/Fax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="FAX" />

            <EditText
                android:id="@+id/Website"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="WEBSITE" />

            <EditText
                android:id="@+id/Cmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="EMAIL" />

            <EditText
                android:id="@+id/City"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edited_account_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="CITY" />

            <Button
                android:id="@+id/btnNextCmp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Next" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#27AE61"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layoRut_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/Img_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/description"
                android:src="@drawable/account" />

            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Img_account"
                android:layout_centerHorizontal="true"
                android:text="Account"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/description"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/txtShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Img_share"
                android:layout_centerHorizontal="true"
                android:text="Share"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_Setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Img_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/description"
                android:src="@drawable/setting" />

            <TextView
                android:id="@+id/txtSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Img_setting"
                android:layout_centerHorizontal="true"
                android:text="Setting"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>